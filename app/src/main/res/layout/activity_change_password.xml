<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="in.neer24.neer24.Activities.ChangePasswordActivity">

    <EditText
        android:id="@+id/oldPasswordChangePasswordActivity"
        android:hint="Old Password"
        android:inputType="text"
        android:maxLines="1"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="16dp"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/newPasswordChangePasswordActivity"
        android:layout_width="match_parent"
        android:hint="New Password"
        android:inputType="text"
        android:maxLines="1"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="16dp"
        android:textAlignment="center"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/updatePasswordChangePasswordActivity"
        android:layout_width="match_parent"
        android:text="Update Password"
        android:layout_height="wrap_content" />


</LinearLayout>
