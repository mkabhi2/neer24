<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    tools:context="in.neer24.neer24.Activities.FacebookLoginSupportActivity">


    <TextView
        android:id="@+id/displayMessageTextViewFacebookLoginSupportActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="16dp"
        android:paddingLeft="16dp"
        android:text="Please verify your mobile number for using Neer24"/>

    <EditText
        android:id="@+id/mobileNumberEditTextFacebookLoginSupportActivity"
        android:hint="Mobile Number"
        android:maxLines="1"
        android:paddingTop="16dp"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:inputType="number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/verifyMobileButtonFacebookLoginSupportActivity"
        android:text="Verify"
        android:paddingTop="16dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />



</LinearLayout>
