<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/loginActivityRL"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context="in.neer24.neer24.Activities.LoginActivity">

<ImageView
    android:id="@+id/logoImageView"
    android:layout_width="100dp"
    android:layout_height="110dp"
    android:layout_marginTop="30dp"
    android:layout_centerHorizontal="true"
    app:srcCompat="@drawable/logo" />


<EditText
    android:id="@+id/welocmeMessageEditText"
    android:layout_width="wrap_content"
    android:layout_height="70dp"
    android:layout_below="@+id/logoImageView"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="20dp"
    android:background="#00000000"
    android:focusable="false"
    android:ems="10"
    android:text="Welcome"
    android:textAlignment="center"
    android:textSize="50sp" />

<EditText
    android:id="@+id/emailEditText"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_below="@+id/welocmeMessageEditText"
    android:layout_marginTop="20dp"
    android:background="@drawable/rounded_corners"
    android:ems="10"
    android:hint="Email"
    android:inputType="textEmailAddress"
    android:textAlignment="center"
    android:textColor="#FFFFFF"
    android:textColorHint="#FFFFFF" />

<Button
    android:id="@+id/nextButton"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_below="@+id/emailEditText"
    android:layout_marginTop="20dp"
    android:background="@drawable/rounded_corners"
    android:text="Next" />

<ProgressBar
    android:id="@+id/progressBar1"
    style="?android:attr/progressBarStyleLarge"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:layout_below="@+id/emailEditText"
    android:layout_marginTop="4dp" />

<LinearLayout

    style="?attr/buttonBarStyle"
    android:id="@+id/socialNetworkLoginLL"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_alignParentBottom="true"
    android:layout_alignParentEnd="true"
    android:orientation="horizontal"
    android:weightSum="2.0">


    <com.facebook.login.widget.LoginButton
        android:id="@+id/facebookLoginButton"
        style="?attr/buttonBarButtonStyle"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:layout_weight="1"
        android:background="@drawable/facebook_button"
        android:text="Facebook"/>

    <Button
        android:id="@+id/facebookButton"
        style="?attr/buttonBarButtonStyle"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/facebook_button"
        android:text="Facebook" />

    <View
        android:layout_width="2dp"
        android:layout_height="match_parent"
        android:background="@android:color/white" />

    <com.google.android.gms.common.SignInButton
        style="?attr/buttonBarButtonStyle"
        android:id="@+id/sign_in_button"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:background="@drawable/gmail_button"
        android:layout_weight="1"
        />


    <Button
        android:id="@+id/gmailButton"
        style="?attr/buttonBarButtonStyle"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/gmail_button"
        android:text="Gmail" />
</LinearLayout>

<TextView
    android:id="@+id/facebookGmailSignUPMessage"
    android:layout_width="match_parent"
    android:layout_height="20dp"
    android:layout_above="@id/socialNetworkLoginLL"
    android:layout_marginBottom="5dp"
    android:text="Do you have a Social Account? Login using"
    android:textAlignment="center" />
<!--android:layout_marginTop="150dp"-->
<!--android:layout_alignBottom="@id/ll1"-->


</RelativeLayout>
