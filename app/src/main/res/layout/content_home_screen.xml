<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="in.neer24.neer24.Activities.HomeScreenActivity"
    tools:showIn="@layout/app_bar_home_screen"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/checkoutButtonHomeScreenLinearLayout"
        android:padding="5dp">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layoutManager="LinearLayoutManager" />

    </ScrollView>

    <LinearLayout
        android:id="@+id/checkoutButtonHomeScreenLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:weightSum="3"
        android:background="@color/LightGrey"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true">
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="32dp"
            app:srcCompat="@drawable/bag_blue"
            android:layout_gravity="center_vertical"/>
        <TextView
            android:id="@+id/dishActivityCartSummaryTextView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:textSize="13sp"
            android:textStyle="bold"
            android:textColor="@color/Black"

            android:layout_alignBottom="@id/home_screen_content"
            android:text="hello"
            android:visibility="invisible"/>
        <Button
            android:id="@+id/dishActivityCheckoutButton"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:text="View Cart"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="10dp"
            android:textColor="@color/White"
            android:layout_weight="2.0"
            android:layout_gravity="center_vertical"
            android:background="@drawable/checkout_button_rounded_corners"
            android:layout_alignBottom="@id/home_screen_content"
            android:layout_toRightOf="@id/dishActivityCartSummaryTextView"
            android:visibility="invisible" />
    </LinearLayout>


</RelativeLayout>
