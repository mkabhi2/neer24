<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="in.neer24.neer24.Activities.ShareActivity"
    tools:showIn="@layout/activity_share">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/linearLayoutShareActivity"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/background_white"
            android:orientation="vertical"
            android:weightSum="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView_share"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/background_white"
                    app:srcCompat="@drawable/slide_img_32" />
            </LinearLayout>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/Black"
                android:gravity="center"
                android:text="* NEER24 Terms and Conditions apply"
                android:textSize="10dp"/>


            <TextView
                android:id="@+id/textView_des"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="15dp"
                android:text="@string/share_des"
                android:textAlignment="center"
                android:textSize="18dp"
                android:textColor="@color/Black"/>
            <TextView
                android:id="@+id/textView_inviteLink"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingTop="2dp"
                android:text="Neer24"
                android:textColor="@color/app_color"
                android:textStyle="bold"
                android:gravity="center"
                android:textSize="35dp"/>

            <TextView
                android:id="@+id/textView_referalLink"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:textSize="15dp"
                android:gravity="center"
                android:text="Using your unique referral code" />

            <TextView
                android:id="@+id/couponCodeTV"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textSize="21dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:gravity="center"
                android:paddingRight="15dp"
                android:paddingLeft="15dp"
                android:padding="5dp"
                android:text="amit29020"
                android:textColor="@color/Black"
                android:background="@drawable/dotted"/>

            <TextView
                android:id="@+id/textView7"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textSize="15dp"
                android:gravity="center"
                android:text="Tap above to copy the code" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:textSize="15dp"
                android:gravity="center"
                android:text="OR" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:textSize="15dp"
                android:gravity="center"
                android:text="Click below to share us through your favourite apps" />

            <Button
                android:id="@+id/shareButtonShareActivity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Invite  Friend's!"
                android:background="@color/app_color"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="30dp"
                android:textSize="23dp"
                android:textColor="@color/White"
                android:textStyle="bold"/>


        </LinearLayout>
    </ScrollView>



</LinearLayout>
