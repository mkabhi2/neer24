<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="in.neer24.neer24.Activities.UserAccountActivity"
    tools:showIn="@layout/activity_user_account">

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/LightGrey"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">
        <ImageView
            android:id="@+id/logo"
            android:layout_width="45dp"
            android:layout_height="65dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/logo" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toRightOf="@+id/logo"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/nameUserAccountActivity"
                android:textColor="@color/Black"
                android:textSize="18sp"
                android:textStyle="bold"
                android:text="Abhishek Kumar Mishra"/>

            <TextView
                android:id="@+id/emailUserAccountActivity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="vijayvictory8@gmail.com"
                android:textColor="@color/Gray"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/mobileNumberUserAccountActivity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="+91 8792641409"
                android:textColor="@color/Gray"
                android:textSize="15sp" />

        </LinearLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/LightGrey"/>

    <ProgressBar
        android:id="@+id/progressBarUserAccountActivity"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/changePasswordUserAcountActivity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="CHANGE PASSWORD"
            android:textColor="@color/app_color"
            android:textStyle="bold"
            android:textSize="14sp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/LightGrey"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:background="@color/Gold"
        android:elevation="2dp">

        <TextView
            android:id="@+id/addresses"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ADDRESSES"
            android:textColor="@color/Black"
            android:textStyle="bold"
            android:textSize="14sp"
            android:layout_alignParentLeft="true"/>

        <TextView
            android:id="@+id/addNewAddressUserAccountActivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:text="+ ADD NEW"
            android:textColor="@color/app_color"
            android:textSize="14sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="5">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/address_rv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layoutManager="LinearLayoutManager" />

        </LinearLayout>
    </ScrollView>


</LinearLayout>