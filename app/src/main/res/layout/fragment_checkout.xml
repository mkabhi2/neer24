<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="in.neer24.neer24.Fragments.CheckoutFragment">

    <TextView
        android:id="@+id/noItemsInCart"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="No items in cart"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:textAlignment="center"
        android:visibility="gone"
        android:textStyle="bold"
        android:textSize="20dp"/>

    <!-- TODO: Update blank fragment layout -->
    <ListView
        android:layout_alignParentTop="true"
        android:id="@+id/checkoutFragmentListViews"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:dividerHeight="10.0dp"
        android:scrollbars="none"
        android:layout_above="@+id/grandTotalLL"/>

    <LinearLayout
        android:id="@+id/grandTotalLL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:background="@color/Green">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:layout_weight="1.5"
            android:text="Grand Total :"
            android:textColor="@color/White"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/totalCheckoutFragmentTextView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:layout_weight="1.5"
            android:text="Rs 100"
            android:textAlignment="viewEnd"
            android:textColor="@color/White"
            android:textSize="15sp"
            android:textStyle="bold" />

    </LinearLayout>
</RelativeLayout>

