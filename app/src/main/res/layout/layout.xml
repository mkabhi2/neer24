            </LinearLayout>-->

            <Button
                android:id="@+id/submit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:background="#36ABE1"
                android:text="ORDER"
                android:textColor="#FFF" />
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
