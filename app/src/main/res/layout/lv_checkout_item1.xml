<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="10dp"
    android:paddingRight="16dp"
    android:background="@drawable/shadow"
    android:id="@+id/lineraLayout1">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/productView">

        <ImageView
            android:id="@+id/iv_productImage"
            android:layout_width="25dp"
            android:layout_height="36dp"
            android:layout_marginRight="10dp"
            app:srcCompat="@mipmap/ic_launcher"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/tv_checkout_product_name"
            android:text="Bottle"
            android:textSize="16sp"
            android:textColor="#000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/iv_productImage"
            android:layout_centerInParent="true"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/showAmountCheckoutListView"
            android:id="@+id/linearLayout">

            <Button
                android:id="@+id/decreaseByOneCheckoutListView"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:text="-"
                android:layout_marginRight="5dp"
                android:background="@drawable/rv_home_item_round_corner_button_add"
                android:layout_gravity="center_vertical"
                android:textAlignment="center"
                android:textColor="@color/White"
                android:textStyle="bold"/>

            <Button
                android:id="@+id/quantityCheckoutListView"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:text="O"
                android:layout_marginRight="5dp"
                android:background="@drawable/rv_home_item_round_corner_button"
                android:layout_gravity="center_vertical"
                android:textAlignment="center"
                android:textColor="@color/White"
                android:textStyle="bold"

                />

            <Button
                android:id="@+id/increaseByOneCheckoutListView"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:text="+"
                android:layout_gravity="center_vertical"
                android:background="@drawable/rv_home_item_round_corner_button_add"
                android:textAlignment="center"
                android:textColor="@color/White"
                android:textStyle="bold"/>


        </LinearLayout>

        <TextView
            android:id="@+id/showAmountCheckoutListView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_gravity="end"
            android:textAlignment="viewEnd"
            android:text="Rs 100"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            android:layout_marginLeft="32dp"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/switch1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/productView">

        <ImageView
            android:id="@+id/iv_productImageEmptyCan"
            android:layout_width="25dp"
            android:layout_height="36dp"
            android:layout_marginRight="10dp"
            app:srcCompat="@mipmap/ic_launcher"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/tv_checkout_product_name_empty_can"
            android:text="Bisleri Empty Can"
            android:textSize="16sp"
            android:textColor="#000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/iv_productImageEmptyCan"
            android:layout_centerInParent="true"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/showAmountEmptyCans"
            android:id="@+id/linearLayout2">


            <TextView
                android:id="@+id/quantityEmptyCans"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:text="O"
                android:layout_marginRight="5dp"
                android:background="@drawable/rv_home_item_round_corner_button"
                android:layout_gravity="center_vertical"
                android:textAlignment="center"
                android:textColor="@color/White"
                android:textStyle="bold"

                />

            <Button
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:text="+"
                android:layout_gravity="center_vertical"
                android:background="@drawable/rv_home_item_round_corner_button_add"
                android:textAlignment="center"
                android:visibility="invisible"/>


        </LinearLayout>

        <TextView
            android:id="@+id/showAmountEmptyCans"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_gravity="end"
            android:textAlignment="viewEnd"
            android:text="Rs 100"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            android:layout_marginLeft="32dp"/>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/newCanSwitch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/switch1">

        <com.hanks.htextview.rainbow.RainbowTextView
            android:id="@+id/newCanSwitchTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="I don't have empty cans to replace"
            app:colorSpace="150dp"
            app:colorSpeed="4dp"
            android:textStyle="bold"
            android:layout_marginRight="5dp"/>

        <android.support.v7.widget.SwitchCompat
            android:id="@+id/switch_new_cans"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorAccent"
            android:textStyle="bold"
            android:layout_gravity="right"/>
    </LinearLayout>


</RelativeLayout>