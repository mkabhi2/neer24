<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <LinearLayout
        android:id="@+id/couponCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="#FFECB3"
        android:padding="8dp">

        <ImageView
            android:id="@+id/codeIcon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="16dp"
            android:src="@drawable/logo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="16dp"
            android:text="NEERFREE"
            android:textColor="@color/Black"
            android:textStyle="bold" />

    </LinearLayout>

    <TextView
        android:id="@+id/applyTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:padding="16dp"
        android:text="APPLY"
        android:textColor="@color/app_color"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/couponTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/couponCode"
        android:layout_marginTop="16dp"
        android:text="Free neer24 can"
        android:textColor="@color/Black"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/couponTitle"
        android:text="Use your earned free neer24 can"/>

    <TextView
        android:padding="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/couponTitle"
        android:layout_below="@+id/applyTV"
        android:text="1 free can left"
        android:textAlignment="viewEnd"
        android:gravity="end"
        android:textColor="@color/Red"
        />

</RelativeLayout>
